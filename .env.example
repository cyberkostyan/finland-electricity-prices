# Neon PostgreSQL Database
POSTGRES_PRISMA_URL=postgresql://user:password@host/database?connect_timeout=15&sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://user:password@host/database?sslmode=require

# Web Push (VAPID) - Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-public-key
VAPID_PRIVATE_KEY=your-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# Cron Secret (generate a random string for production)
CRON_SECRET=your-secret-here
